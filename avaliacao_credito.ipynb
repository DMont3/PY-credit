def categorizar_limite_credito(valor):
    if valor <= 10000:
        return 'Baixo'
    elif valor <= 50000:
        return 'Médio'
    elif valor <= 100000:
        return 'Alto'
    else:
        return 'Muito Alto'
dados['Categoria_Limite_Credito'] = dados['valorAprovado'].apply(categorizar_limite_credito)
